rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // テストコレクション（開発用）
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    // 家族コレクション
    match /families/{familyId} {
      // 家族ドキュメント
      allow read, write: if true;
      
      // 赤ちゃんサブコレクション
      match /babies/{babyId} {
        allow read, write: if true;
        
        // 記録サブコレクション
        match /records/{recordId} {
          allow read, write: if true;
        }
      }
      
      // 家族メンバーサブコレクション
      match /members/{memberId} {
        allow read, write: if true;
      }
    }
    
    // その他のすべてのドキュメントは拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}